	<script> 
		// catch outdated browsers
		var $buoop = {required:{e:-4,f:-3,o:-3,s:-1,c:-3},insecure:true,unsupported:true,api:2021.11,text_for_i: {
			'msg':'Your browser ({brow_name}) is so damn old! Internet Explorer is not supported anymore.',
