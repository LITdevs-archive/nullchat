<script>
// GLOBAL
window.unreadMessages = 0;
socket.on('chat message', function(msg) {
	if(!document.hasFocus()) {
		if(unreadMessages != "!") unreadMessages += 1;
		document.title = `(${unreadMessages}) null`;
	}
});
window.onfocus = function() {
	unreadMessages = 0;
	document.title = "null";
}
